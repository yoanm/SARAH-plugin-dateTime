<grammar
        version="1.0"
        xml:lang="fr-FR"
        mode="voice"  root="time"
        xmlns="http://www.w3.org/2001/06/grammar"
        tag-format="semantics/1.0"
>
	<rule id="time" scope="public">
		<example>Alfred quelle heure est il ?</example>
		<tag>out.action=new Object(); </tag>
		<item weight="2">Alfred</item>
		<one-of>
			<item>Quel jour sommes-nous<tag>out.action.action="DATE"</tag></item>
			<item>On est quel jour<tag>out.action.action="DATE"</tag></item>
			<item>Quelle date sommes-nous<tag>out.action.action="DATE"</tag></item>
			<item>On est quelle date<tag>out.action.action="DATE"</tag></item>

			<item>Quelle heure est il<tag>out.action.action="HOUR"</tag></item>
			<item>Il est quelle heure<tag>out.action.action="HOUR"</tag></item>
		</one-of>
		<tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/dateTime";</tag>
	</rule>
</grammar>
